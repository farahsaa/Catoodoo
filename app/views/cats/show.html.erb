<%= link_to("edit", edit_cat_path(@cat), class: "btn btn-primary") %>
<%= link_to("delete", cat_path(@cat), method: :delete, data: {confirm: "are you sure you want to delete?"}, class: "btn btn-primary") %>
<%= link_to("addtask", new_schedule_path(cat_id: @cat), class: "btn btn-primary") %>

<table>
  <tr>
    <th>
      Name
    </th>
    <td>
      <%= @cat.name %>
    </td>
  </tr>
</table>

<table class="table">
  <thead>
    <tr>
      <th scope="col">
        Task
      </th>
      <th scope="col">
        Scheduled
      </th>
      <th scope="col">
        Status
      </th>
    </tr>
  </thead>

  <% @schedules.each do |schedule| %>
    <tr>
      <td>
        <%= link_to(schedule.task.title, schedule_path(schedule)) %>
      </td>
      <td>
        <%= schedule.scheduled_at %>
      </td>
      <td>
      <%= schedule.status %>
      </td>
    </tr>
  <% end %>
</table>