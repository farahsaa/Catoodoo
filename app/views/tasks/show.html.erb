<table>
  <tr>
    <th>
      Title
    </th>
    <td>
      <%= @task.title %>
    </td>
  </tr>
</table>

<table>
  <% @schedules.each do |schedule| %>
    <tr>
      <td>
        <%= link_to(schedule.cat.name, cat_path(schedule.cat)) %>
      </td>
      <td>
        <%= schedule.scheduled_at %>
      </td>
    </tr>
  <% end %>
</table>